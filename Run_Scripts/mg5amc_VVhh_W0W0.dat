####################
##### w0w0 ###
####################

launch EVA_w0w0_hh_5TeV_muf250
analysis=off
set no_parton_cut
set ebeam 2500 # 5TeV COM
set nevents 400k
set event_norm sum

set lpp1  -3
set lpp2   4
set pdlabel eva 
set evaorder 0

set fixed_ren_scale true
set fixed_fac_scale1 true
set fixed_fac_scale2 true
set dsqrt_q2fact1 250.0 	# muF for both of these beams,				
set dsqrt_q2fact2 250.0

set run_tag EVA_w0w0_hh_5TeV_muf250_LLA
set ievo_eva 0 # (0=q^2 or 1=pT^2)
set use_syst true


done

launch EVA_w0w0_hh_5TeV_muf250
analysis=off 
set evaorder 1 
set run_tag EVA_w0w0_hh_5TeV_muf250_LP
done

launch EVA_w0w0_hh_5TeV_muf250
analysis=off 
set evaorder 2
set run_tag EVA_w0w0_hh_5TeV_muf250_NLP
done

